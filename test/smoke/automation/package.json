	"type": "module",
	"main": "./out/index.js",
	"scripts": {
		"compile": "npm run copy-driver && npm run copy-driver-definition && tsc",
		"copy-driver": "mkdirp out && ncp src/driver.js out/driver.js",
		"copy-driver-definition": "node tools/copy-driver-definition.js",
		"copy-package-version": "node tools/copy-package-version.js",
		"postinstall": "npm run compile",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'"
	},
	"devDependencies": {
		"@types/debug": "4.1.5",
		"@types/mkdirp": "^1.0.1",
		"@types/ncp": "2.0.1",
		"@types/node": "14.x",
		"@types/tmp": "0.1.0",
		"cpx2": "3.0.0",
		"mkdirp": "^1.0.4",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.41.2",
		"tmp": "0.1.0",
		"tree-kill": "1.2.2",
		"typescript": "^4.3.2",
		"typescript-esbuild": "latest",
		"vscode-uri": "^2.0.3",
		"watch": "^1.0.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
